DirectoryIndex index.php index.html index.htm

<VirtualHost *:80>
    ServerName kavinvin.me
    Redirect permanent / https://kavinvin.me/
</VirtualHost>

<VirtualHost *:443>
    ServerName kavinvin.me
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</VirtualHost>

Options -Indexes
Options +FollowSymlinks

<Files .htaccess>
  deny from all
</Files>
